generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Paste {
  id        String   @id
  content   String
  expiresAt DateTime?
  maxViews  Int?
  viewCount Int      @default(0)
  createdAt DateTime @default(now())

  @@index([expiresAt])
}
